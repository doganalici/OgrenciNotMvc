@model OgrenciNotMvc.Models.EntityFramework.TBLOGRENCILER
@{
    ViewBag.Title = "OgrenciGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;font-size:55px;font-family:'Times New Roman';">ÖĞRENCİ GETİR SAYFASI</h3>

@using (Html.BeginForm("Guncelle", "Ogrenciler", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.OGRAD)
        @Html.TextBoxFor(m => m.OGRAD, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRSOYAD)
        @Html.TextBoxFor(m => m.OGRSOYAD, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRFOTOGRAF)
        @Html.TextBoxFor(m => m.OGRFOTOGRAF, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRKULUP)
        @Html.TextBoxFor(m => m.OGRKULUP, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.OGRCINSIYET)
        @Html.TextBoxFor(m => m.OGRCINSIYET, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.OGRENCIID)
    <div style="margin-top:15px;">
        <button class="btn btn-info">Güncelle</button>
    </div>
}