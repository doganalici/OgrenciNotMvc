@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLOGRENCILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;font-size:55px;font-family:'Times New Roman';">ÖĞRENCİLER</h3>

<table class="table table-bordered">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>CİNSİYET</th>
        <th>KULÜP</th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OGRENCIID</td>
                <td>@ogr.OGRAD</td>
                <td>@ogr.OGRSOYAD</td>
                <td>@ogr.OGRCINSIYET</td>
                <td>@ogr.OGRKULUP</td>
            </tr>

        }
    </tbody>
</table>

<a href="/Ogrenciler/YeniOgrenci" class="btn btn-primary">YENİ ÖĞRENCİ KAYDI</a>