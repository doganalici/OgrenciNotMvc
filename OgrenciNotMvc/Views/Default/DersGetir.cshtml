@model OgrenciNotMvc.Models.EntityFramework.TBLDERSLER
@{
    ViewBag.Title = "DersGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="text-align:center;font-size:55px;font-family:'Times New Roman';">DERS GETİR SAYFASI</h3>

@using (Html.BeginForm("Guncelle", "Default", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.DERSAD)
        @Html.TextBoxFor(m => m.DERSAD, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.DERSID)
    <div style="margin-top:15px;">
        <button class="btn btn-info">Güncelle</button>
    </div>
}