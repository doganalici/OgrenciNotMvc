@using OgrenciNotMvc.Models.EntityFramework;
@model List<TBLDERSLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 style="text-align:center;font-size:55px;font-family:'Times New Roman';">DERSLER</h3>
<table class="table table-bordered">
    <tr>
        <th>DERS ID</th>
        <th>DERS ADI</th>
    </tr>
    <tbody>
        @foreach (var drs in Model)
        {
            <tr>
                <td>@drs.DERSID</td>
                <td>@drs.DERSAD</td>
            </tr> 
        }
    </tbody>
</table>
<a href="/Default/YeniDers" class="btn btn-primary">YENİ DERS KAYDI</a>